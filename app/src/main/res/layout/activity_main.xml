<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/music">

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="162dp"
        android:background="#f68827"
        android:text="@string/play"
        android:textAllCaps="false"
        android:textColor="#20429c"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:layout_width="396dp"
        android:layout_height="48dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playButton" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="174dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="123dp"
        android:contentDescription="@string/music"
        app:layout_constraintBottom_toTopOf="@+id/playButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="174dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="123dp"
        android:contentDescription="@string/music"
        app:layout_constraintBottom_toTopOf="@+id/playButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_music_note_blue_24dp" />

    <ImageView
        android:id="@+id/imageViewPrev"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="previous"
        android:layout_marginTop="750dp"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="123dp"
        android:contentDescription="@string/music"
        app:layout_constraintBottom_toTopOf="@+id/playButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47000003"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/imageViewPrevIcon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="750dp"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="123dp"
        android:contentDescription="@string/music"
        app:layout_constraintBottom_toTopOf="@+id/playButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47000003"
        app:srcCompat="@drawable/ic_skip_previous_blue_24dp" />

    <ImageView
        android:id="@+id/goSong"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="play"
        android:layout_marginTop="750dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="123dp"
        android:contentDescription="@string/music"
        app:layout_constraintBottom_toTopOf="@+id/playButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47000003"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/goSongIcon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="750dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="123dp"
        android:contentDescription="@string/music"
        app:layout_constraintBottom_toTopOf="@+id/playButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47000003"
        app:srcCompat="@drawable/ic_play_arrow_blue_24dp" />

    <ImageView
        android:id="@+id/nextSong"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:onClick="next"
        android:layout_marginTop="750dp"
        android:layout_marginStart="255dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="123dp"
        android:contentDescription="@string/music"
        app:layout_constraintBottom_toTopOf="@+id/playButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47000003"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/nextSongIcon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="750dp"
        android:layout_marginStart="255dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="123dp"
        android:contentDescription="@string/music"
        app:layout_constraintBottom_toTopOf="@+id/playButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47000003"
        app:srcCompat="@drawable/ic_skip_next_blue_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>